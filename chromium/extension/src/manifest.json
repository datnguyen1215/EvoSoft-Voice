{
  "manifest_version": 3,
  "name": "EvoSoft Voice",
  "version": "1.0.0",
  "background": {
    "service_worker": "worker.js"
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["activeTab", "storage"]
}
